# Production Environment Configuration Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to git!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=legal_content_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-super-secure-password-here
POSTGRES_PORT=5432
POSTGRES_HOST_AUTH_METHOD=scram-sha-256

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
# Environment mode
ENVIRONMENT=production
DEBUG=false

# Secret key for JWT and session encryption (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# Database URL (auto-constructed from above values in docker-compose)
DATABASE_URL=postgresql://postgres:your-super-secure-password-here@postgres:5432/legal_content_db

# Backend port
BACKEND_PORT=8000

# =============================================================================
# API KEYS
# =============================================================================
# Anthropic Claude API Key (get from: https://console.anthropic.com/)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# FILE STORAGE
# =============================================================================
# Maximum upload size in MB
MAX_UPLOAD_SIZE_MB=50

# =============================================================================
# WORDPRESS CONFIGURATION
# =============================================================================
# Timeout for WordPress API requests (seconds)
WORDPRESS_TIMEOUT=60

# Maximum retry attempts for failed requests
WORDPRESS_MAX_RETRIES=3

# =============================================================================
# LOGGING
# =============================================================================
# Log level: debug, info, warning, error, critical
LOG_LEVEL=info

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Frontend port
FRONTEND_PORT=3000

# API URL for frontend (use your actual domain in production)
REACT_APP_API_URL=https://api.yourdomain.com

# =============================================================================
# NGINX CONFIGURATION (if using nginx profile)
# =============================================================================
# Domain name for SSL certificate
DOMAIN_NAME=yourdomain.com

# SSL certificate paths (use Let's Encrypt or your own certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =============================================================================
# PRODUCTION CHECKLIST
# =============================================================================
# Before deploying to production, ensure you have:
#
# ✓ Changed all default passwords
# ✓ Generated a secure SECRET_KEY
# ✓ Obtained Anthropic API key
# ✓ Updated CORS_ORIGINS with your domain
# ✓ Updated REACT_APP_API_URL with your API domain
# ✓ Configured SSL certificates for HTTPS
# ✓ Set DEBUG=false
# ✓ Reviewed and adjusted resource limits
# ✓ Set up database backups
# ✓ Configured monitoring and logging
# ✓ Tested the application in staging environment
