# Application Settings
APP_NAME="Legal Content System"
APP_VERSION="1.0.0"
DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
# For SQLite (development):
DATABASE_URL=sqlite:///./legal_content.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/legal_content_db

# Anthropic API
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Pexels API (for featured images)
# Get free API key at https://www.pexels.com/api/
PEXELS_API_KEY=your-pexels-api-key-here

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# WordPress Configuration (optional)
WORDPRESS_DEFAULT_SITE_ID=

# File Upload Settings
MAX_UPLOAD_SIZE_MB=50
ALLOWED_FILE_EXTENSIONS=[".pdf", ".txt", ".doc", ".docx"]

# Processing Settings
MAX_CONCURRENT_PROCESSING=3
